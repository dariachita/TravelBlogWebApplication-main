@page "/"
<PageTitle>Home</PageTitle>

<style>
.home-content {
    text-align: center;
    color: #76C2AF;
    font-family: Arial, sans-serif;
    padding: 20px;
}

.welcome-title {
    font-size: 2.5em;
    margin-top: 30px;
    color: #76C2AF;
}

.sub-text {
    font-size: 1.3em;
    color: #333;
    font-weight: bold;
    margin-top: 10px;
}

.description {
    font-size: 1.1em;
    color: #333;
    max-width: 600px;
    margin: 20px auto;
    line-height: 1.6em;
}

/* Center the carousel */
.carousel {
    max-width: 600px; /* Control the width of the carousel */
    margin: 0 auto; /* Center the carousel */
}

/* Ensure images don't overflow */
.carousel-item img {
    max-height: 400px; /* Control the height of the images */
    object-fit: cover; /* Crop images to fit within dimensions */
    width: 100%; /* Ensure images fit the width of the carousel */
    border-radius: 10px;
}
</style>

<div class="home-content">
    <h2 class="welcome-title">Hi, we're <strong>WANDERLY</strong></h2>
    <p class="sub-text">The world's largest blog community</p>
    <p class="description">
        Home to millions of people who love factual stories, Wanderly has democratized traveling storytelling 
        for a new generation of diverse Gen Z travelers and their adventures.
    </p>
</div>

<!-- Carousel -->
<div id="travelCarousel" class="carousel slide mt-4" data-ride="carousel">
    <!-- Indicators -->
    <ul class="carousel-indicators">
        <li data-target="#travelCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#travelCarousel" data-slide-to="1"></li>
        <li data-target="#travelCarousel" data-slide-to="2"></li>
        <li data-target="#travelCarousel" data-slide-to="3"></li>
    </ul>

    <!-- The slideshow -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="images/2d935592-1f7b-4362-b131-fd7e0a3e91e5.jpg" alt="Travel Blogger 1">
        </div>
        <div class="carousel-item">
            <img src="images/6ee8c349-67ad-4855-976b-a7a6aaff6852.jpg" alt="Travel Blogger 2">
        </div>
        <div class="carousel-item">
            <img src="images/9ead1631-6daa-4a11-a247-4895ab5caa81.jpg" alt="Travel Blogger 3">
        </div>
        <div class="carousel-item">
            <img src="images/87432275-84aa-428b-ab3f-4faccab1f585.jpg" alt="Travel Blogger 4">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#travelCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#travelCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!-- JavaScript for Bootstrap Carousel Functionality -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" defer></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js" defer></script>